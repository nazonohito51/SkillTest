<h1>ユーザ一覧</h1>

<p id="notice"><%= flash[:notice] %></p>



<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>年齢</th>
      <th>性別</th>
      <th>最新コメント</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= user.gender ? '男' : '女' %></td>
        <td>
          <% if user.comments.last %>
            <%= user.comments.last.message %>
          <% end %>
        </td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '変更', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: user.name + 'を削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



